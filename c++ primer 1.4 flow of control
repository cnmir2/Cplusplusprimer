1.4.4 the if statement
//count  how many consecutive times each  distinct value appears in the input 

#include<iostream>

int main()
{
       int val=0,curval=0
       if (std::cin>>val)
       {
             int  n=1;
             while(std::cin>>curval) 
                {
                    if(curval==val)
                 
                    {
                     ++n;
                     
                    }
                   else 
                   {
                   std::cout<<val<<"occur"<<n<<"times"<<std::endl;
                   
                   val=curval;
                   n=1;
                   
                   
                   }
            
            
                } 
             std::cout<<val<<"occur"<<n<<"times"<<std::endl;


       }



       return 0;


}

